{
  "name": "open-iot",
  "version": "1.0.0",
  "description": "Open IoT project",
  "main": "index.js",
  "scripts": {
    "postinstall": "mkdir -p src/public/css && cp node_modules/semantic-ui-css/semantic.min.css src/public/css/",
    "start": "nodemon src/bin/www",
    "test": "mocha --exit --timeout 120000",
    "test:coverage": "nyc --reporter=text npm test",
    "clean": "rm -Rf src/public/js/dist && mkdir -p src/public/js/dist",
    "watch-js": "npm run clean && watchify src/public/js/src/*.js -o src/public/js/dist/bundle.js -dv --transform [ babelify ]",
    "watch": "npm run watch-js",
    "build-js": "npm run clean && browserify src/public/js/src/*.js -o src/public/js/dist/bundle.js --transform [ babelify ]",
    "build": "npm run build-js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pvorotnikov/open-ui.git"
  },
  "author": "Petar Vorotnikov (petar@vorotnikov.net)",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/pvorotnikov/open-ui/issues"
  },
  "homepage": "https://github.com/pvorotnikov/open-ui#readme",
  "dependencies": {
    "amqplib": "^0.5.2",
    "aws-iot-device-sdk": "^2.2.0",
    "bcrypt": "^1.0.3",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "cookie-parser": "^1.4.3",
    "cson": "^4.1.0",
    "express": "^4.16.2",
    "express-session": "^1.15.6",
    "hat": "0.0.3",
    "highlight.js": "^9.12.0",
    "javascript-state-machine": "^2.4.0",
    "json2json": "^0.2.8",
    "jsonwebtoken": "^8.1.0",
    "lodash": "^4.17.4",
    "moment": "^2.19.1",
    "mongoose": "^4.13.0",
    "morgan": "^1.9.0",
    "mqtt": "^2.15.2",
    "nconf": "^0.8.5",
    "nodemon": "^1.12.1",
    "prop-types": "^15.6.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.2.0",
    "semantic-ui-css": "^2.2.12",
    "semantic-ui-react": "^0.75.1",
    "uuid": "^3.1.0",
    "validator": "^9.1.1",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babelify": "^8.0.0",
    "browserify": "^14.5.0",
    "chai": "^4.1.2",
    "mocha": "^4.0.1",
    "mockgoose": "^7.3.5",
    "nyc": "^11.4.1",
    "rewire": "^3.0.2",
    "sinon": "^4.0.2",
    "sinon-chai": "^2.14.0",
    "supertest": "^3.0.0",
    "watchify": "^3.9.0"
  },
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "docs/*",
      "src/public/*"
    ]
  }
}
